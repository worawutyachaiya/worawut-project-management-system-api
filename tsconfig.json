{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "@src/*": ["./*"],
      "@controllers/*": ["./_workspace/controllers/*"],
      "@models/*": ["./_workspace/models/*"],
      "@services/*": ["./_workspace/services/*"],
      "@sql/*": ["./_workspace/sql/*"],
      "@routes/*": ["./_workspace/routes/*"],
      "@businessData/*": ["./businessData/*"],
      "@utils/*": ["./utils/*"],
      "@helpers/*": ["./helpers/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@config/*": ["./config/*"],
      "@types/*": ["./types/*"],
      "@_workspace/*": ["./_workspace/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
